{
  "metadata": {
    "config_name": "VCC Competition Data Processing",
    "description": "Process Virtual Cell Challenge competition datasets into efficient chunks",
    "version": "1.0",
    "created": "2025-08-03"
  },
  
  "paths": {
    "input": {
      "raw_data_dir": "/workspace/vcc/data/raw/competition_support_set",
      "gene_names_file": "/workspace/vcc/data/raw/competition_support_set/gene_names.csv",
      "datasets": {
        "k562": "/workspace/vcc/data/raw/competition_support_set/k562.h5",
        "jurkat": "/workspace/vcc/data/raw/competition_support_set/jurkat.h5", 
        "hepg2": "/workspace/vcc/data/raw/competition_support_set/hepg2.h5",
        "rpe1": "/workspace/vcc/data/raw/competition_support_set/rpe1.h5",
        "competition_train": "/workspace/vcc/data/raw/competition_support_set/competition_train.h5"
      }
    },
    "output": {
      "base_dir": "/workspace/vcc/data/processed",
      "chunks_dir": "/workspace/vcc/data/processed/chunked",
      "logs_dir": "/workspace/vcc/data/processed/logs",
      "temp_dir": "/workspace/vcc/data/processed/temp"
    }
  },
  
  "processing": {
    "chunking": {
      "chunk_size": 25000,
      "compression_level": 6,
      "max_memory_gb": 8.0
    },
    
    "datasets": {
      "k562": {
        "include": true,
        "priority": 1,
        "cell_type": "K562",
        "max_cells": 75000,
        "description": "K562 chronic myelogenous leukemia cells",
        "required": false
      },
      "jurkat": {
        "include": true, 
        "priority": 2,
        "cell_type": "Jurkat",
        "max_cells": 50000,
        "description": "Jurkat T lymphocyte cells",
        "required": false
      },
      "competition_train": {
        "include": true,
        "priority": 0,
        "cell_type": "Mixed",
        "max_cells": 200000,
        "description": "Competition training dataset",
        "required": true
      },
      "hepg2": {
        "include": false,
        "priority": 3,
        "cell_type": "HepG2", 
        "max_cells": 30000,
        "description": "HepG2 hepatocellular carcinoma cells",
        "required": false
      },
      "rpe1": {
        "include": false,
        "priority": 4,
        "cell_type": "RPE1",
        "max_cells": 30000,
        "description": "RPE1 retinal pigment epithelial cells",
        "required": false
      }
    },
    
    "quality_control": {
      "enabled": true,
      "filter_cells": true,
      "min_genes_per_cell": 200,
      "max_mitochondrial_percent": 20.0,
      "min_umi_per_cell": 500,
      "max_umi_per_cell": 50000
    },
    
    "gene_processing": {
      "use_vcc_genes": true,
      "gene_names_file": "/workspace/vcc/data/raw/competition_support_set/gene_names.csv",
      "order_by_vcc": true,
      "strict_vcc_compliance": false,
      "filter_hvg": false,
      "n_hvg": 2000
    },
    
    "cell_processing": {
      "filter_by_gene_count": true,
      "min_genes_per_cell": 200,
      "normalize_counts": false,
      "log_transform": false
    },
    
    "filtering": {
      "min_cells_per_dataset": 5000,
      "min_genes_per_dataset": 10000,
      "remove_duplicates": true
    }
  },
  
  "control_cells": {
    "subset_to_control_only": false,
    "control_indicators": {
      "target_gene": ["non-targeting", "control", "ctrl", "NT", "negative_control"],
      "perturbation_type": ["control", "ctrl", "none", "negative"],
      "condition": ["control", "ctrl", "dmso", "vehicle", "untreated"]
    }
  },
  
  "validation": {
    "verify_gene_order": true,
    "check_data_integrity": true,
    "validate_metadata": true,
    "log_statistics": true
  },
  
  "performance": {
    "parallel_processing": true,
    "max_workers": 4,
    "memory_monitoring": true,
    "progress_logging": true
  }
}
